<div class="row justify-content-center">
  <div class="col-12 col-md-8">
    <%= simple_form_for @article do |f| %>
      <%= f.input :title, input_html: { class: "mb-5" } %>
      <%= f.rich_text_area :rich_content %>
      <div class="custom-control custom-switch my-5">
        <input name="article[publish]" type="hidden" value="false">
        <input type="checkbox" class="custom-control-input boolean required" value="true" name="article[publish]" id="article_publish" checked>
        <label class="custom-control-label boolean required" for="article_publish">Publier cet article</label>
      </div>
      <%= f.submit 'Enregister mon article', class: "btn btn-primary"%>
    <% end %>

  </div>
</div>

