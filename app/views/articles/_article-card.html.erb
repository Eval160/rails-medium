<div class="article-card">
  <div class="article-card_title">
    <h3><%= link_to article.title, article_path(article) %></h3>
    <div class="upvote clickable" id="votes-article-<%= article.id %>">
      <%= render 'vote-icon', article: article %>
    </div>
  </div>
  <div class="article-card_content">
    <%= truncate_rich_text(article.rich_content, 200) %>
    <%=  link_to "[...]", article_path(article) if article.rich_content.body.html_safe.length > 140 %>
  </div>
  <div class="article-card_author">
    <span>Par <%= article.user.nickname %>, le <%= article.created_at.strftime("%d-%m-%Y") %> </span>
  </div>
</div>
